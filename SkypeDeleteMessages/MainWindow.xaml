<Window x:Class="SkypeDeleteMessages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<StackPanel>
			<Label>Перед выполнение действий необходимо закрыть скайп</Label>
			<Label>Лучше сохранить базу данный (main.db) в другом месте перед удалением сообщений, при необходимости будет возможность восстановить данные</Label>
			<TextBox TextWrapping="Wrap" Name="TextBoxURLDB" Text="Путь к файлу бд" VerticalAlignment="Top"/>
			<DataGrid Name="DataGridConversations" >
				<DataGrid.Columns>
					<DataGridTextColumn Header="Название" Width="175" Binding="{Binding Path=Id}"></DataGridTextColumn>
					<DataGridTextColumn Header="Участники" Binding="{Binding Path=Name}"></DataGridTextColumn>
				</DataGrid.Columns>
			</DataGrid>
			<DataGrid Name="DataGridMessages" >
				<DataGrid.Columns>
					<DataGridTextColumn Header="Автор" Width="175" Binding="{Binding Path=Author}"></DataGridTextColumn>
					<DataGridTextColumn Header="Сообщение" Binding="{Binding Path=Text}"></DataGridTextColumn>
				</DataGrid.Columns>
			</DataGrid>
			<Button>Удалить всю переписку</Button>
		</StackPanel>
	</Grid>
</Window>
